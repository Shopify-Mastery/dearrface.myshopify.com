    },
    { "type": "text", "id": "us_label", "label": "US/Our Column Label", "default": "US" },
    { "type": "text", "id": "others_label", "label": "Others/Them Column Label", "default": "Them" },
    { "type": "color", "id": "table_bg", "label": "Table Background Color", "default": "#fff" },
    { "type": "color", "id": "row_border_color", "label": "Feature Row Border Color", "default": "#e5e5e5" },
    { "type": "color", "id": "check_color", "label": "Checkmark Color", "default": "#1db954" },
    { "type": "color", "id": "cross_color", "label": "Cross Color", "default": "#e74c3c" },
    { "type": "color", "id": "icon_bg", "label": "Icon Background Color", "default": "#fff" },
    { "type": "checkbox", "id": "rounded_corners", "label": "Rounded Corners for Table", "default": true },
    { "type": "color", "id": "background_color", "label": "Section Background Color", "default": "#fff" },
    { "type": "header", "content": "Section Padding (Mobile)" },
    {
