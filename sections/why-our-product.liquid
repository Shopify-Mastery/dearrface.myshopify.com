{% endjavascript %}
{% schema %}
{
  "name": "Why Our Product Table",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "color", "id": "us_col_th_color", "label": "US Column Header Text Color", "default": "#1db954" },
    { "type": "color", "id": "others_col_th_color", "label": "Others Column Header Text Color", "default": "#222" },
    {
      "type": "color",
      "id": "us_col_gradient_start",
      "label": "US/Our Column Gradient Start",
      "default": "#1db954"
    },
    {
