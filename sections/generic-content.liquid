      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Generic Text Content",
      "blocks": [{ "type": "caption" }, { "type": "heading" }, { "type": "description" }]
    }
  ]
}
{% endschema %}
