{% style %}
  .footer-custom {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    padding-left: {{ section.settings.padding_left_mobile }}px;
    padding-right: {{ section.settings.padding_right_mobile }}px;
  }

  @media (min-width: 1024px) {
    .footer-custom {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      padding-left: {{ section.settings.padding_left_desktop }}px;
      padding-right: {{ section.settings.padding_right_desktop }}px;
    }
  }

  .footer-custom__inner {
    width: 100%;
    margin: 0 auto;
  }

  .footer-custom__main {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 1024px) {
    .footer-custom__main {
      flex-direction: row;
      justify-content: space-between;
      gap: 4rem;
    }
    .footer-custom__col {
      flex: 1 1 0;
      min-width: 0;
      width: auto;
      margin-bottom: 0;
    }
  }

  .footer-custom__col {
    margin-bottom: 1.5rem;
  }

  .footer-custom__col--logo {
    width: 100%;
    align-items: flex-start;
    justify-content: center;
    min-width: 15rem;
    margin-bottom: 1.5rem;
    display: flex;
  }

  .footer-custom__col--about,
  .footer-custom__col--brand-policies {
    width: 50%;
    min-width: 0;
  }

  .footer-custom__col--company {
    width: 100%;
    align-items: flex-start;
    justify-content: flex-start;
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 1024px) {
    .footer-custom__col--logo-block {
      flex-grow: 2;
    }
    .footer-custom__col--logo,
    .footer-custom__col--about,
    .footer-custom__col--brand-policies,
    .footer-custom__col--company {
      width: auto;
      min-width: 0;
      margin-bottom: 0;
      display: block;
      align-items: flex-start;
      justify-content: flex-start;
    }
    .footer-custom__col--logo {
      min-width: 15rem;
      display: flex;
      align-items: flex-start;
      justify-content: flex-start;
      margin-bottom: 2.5rem;
    }
    .footer-custom__col--company {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
  }

  .footer-custom__logo-img {
    max-width: 15rem;
    height: auto;
    margin-bottom: 0.5rem;
  }

  @media (min-width: 1024px) {
    .footer-custom__logo-img {
      max-width: 15rem;
    }
  }

  .footer-custom__logo-text {
    font-size: 3rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: 0.05em;
    line-height: 1.1;
  }

  .footer-custom__logo-text--main {
    font-size: 3.3rem;
    font-weight: 700;
    letter-spacing: 0.01em;
  }

  .footer-custom__logo-text--sub {
    font-size: 1.8rem;
    font-weight: 400;
    letter-spacing: 0.3em;
    margin-top: 0.2rem;
  }

  .footer-custom__menu {
    margin-bottom: 1.5rem;
  }

  .footer-custom__menu-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.7rem;
    letter-spacing: 0.01em;
    text-transform: uppercase;
    white-space: nowrap;
  }

  @media (min-width: 1024px) {
    .footer-custom__menu-title {
      font-size: 1.7rem;
    }
  }

  .footer-custom__menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-custom__menu-item {
    margin-bottom: 0.5rem;
  }

  .footer-custom__menu-link {
    color: #fff;
    text-decoration: none;
    font-size: 1.2rem;
    line-height: 1.5;
  }

  @media (min-width: 1024px) {
    .footer-custom__menu-link {
      font-size: 1.5rem;
    }
  }

  .footer-custom__company {
    display: flex;
    align-items: center;
    gap: 1.2rem;
    color: #fff;
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    flex-wrap: nowrap;
  }

  .footer-custom__company-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.7rem;
    letter-spacing: 0.01em;
    text-transform: uppercase;
    white-space: nowrap;
  }

  @media (min-width: 1024px) {
    .footer-custom__company {
      font-size: 1.5rem;
    }
    .footer-custom__company-title {
      font-size: 1.7rem;
    }
  }

  .footer-custom__email-icon {
    width: 1.8rem;
    height: 1.8rem;
    display: inline-block;
    vertical-align: middle;
    fill: #fff;
    font-size: 1.8rem;
    line-height: 1;
  }

  .footer-custom__bottom {
    margin-top: 2rem;
  }

  hr.footer-custom__divider {
    width: 100%;
    height: 0.3rem;
    background: rgba(255,255,255,0.35);
    margin: 3rem 0;
    border: none;
    display: block;
  }

  .footer-custom__copyright {
    text-align: center;
    color: #fff;
    font-size: 1rem;
    letter-spacing: 0.01em;
    line-height: 1.5;
  }

  .footer-custom__mobile-cols {
    display: flex;
    flex-direction: row;
    gap: 0;
    width: 100%;
    margin-bottom: 1.5rem;
  }
  .footer-custom__mobile-col {
    width: 50%;
    min-width: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
  }
  @media (min-width: 1024px) {
    .footer-custom__mobile-cols {
      display: none;
    }
  }
  @media (max-width: 1023px) {
    .footer-custom__col--about,
    .footer-custom__col--brand-policies {
      display: none;
    }
  }

  .footer-custom__newsletter-wrapper {
    width: 100%;
    margin-bottom: 1.5rem;
  }
  .footer-custom__newsletter .field {
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
  }
  .footer-custom__newsletter .field::after {
    display: none;
  }
  .footer-custom__newsletter .field button {
    top: 0;
    left: 0;
  }
  .footer-custom__newsletter .field input {
  }
  .footer-custom__newsletter input[type="email"] {
    width: 70%;
    flex-grow: 0;
    border-radius: 0 4px 4px 0;
    border: 1px solid #000;
    padding: 1.2rem;
    font-size: 1rem;
    background-color: #FFFFFF;
    color: #000000;
  }
  .footer-custom__newsletter input[type="email"]:focus {
    box-shadow: none;
  }
  .footer-custom__newsletter button {
    border-radius: 4px 0 0 4px;
    border: none;
    background: #000;
    color: #fff;
    font-weight: 700;
    padding: 2rem;
    font-size: 1rem;
    height: 100%;
    cursor: pointer;
    min-width: 30%;
    max-height: 4.6rem;
  }
  .footer-custom__socials-wrapper {
    width: 100%;
    margin: 1.2rem 0 2rem 0;
    display: flex;
    justify-content: center;
  }
  @media (min-width: 768px) {
    .footer-custom__newsletter input[type="email"] {
      font-size: 1.5rem;
    }
    .footer-custom__newsletter button {
      font-size: 1.5rem;
      max-height: 4.7rem;
    }
  }
  @media (min-width: 1024px) {
    .footer-custom__socials-wrapper {
      justify-content: flex-start;
    }
    .footer-custom__newsletter input[type="email"] {
      width: 65%;
      flex-grow: 0;
      border-radius: 0 4px 4px 0;
      border: 1px solid #000;
      padding: 1.2rem;
      font-size: 1rem;
      background-color: #FFFFFF;
      color: #000000;
    }
    .footer-custom__newsletter input[type="email"]:focus {
      box-shadow: none;
    }
    .footer-custom__newsletter button {
      min-width: 35%;
    }
  }
  .footer-custom__list-social {
    display: flex;
    gap: 1.2rem;
  }
  .footer-custom__list-social a.list-social__link {
    color: #000000;
  }
  .footer-custom__payments-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }
  .footer-custom__payment {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .list-payment {
    display: flex;
    gap: 0.5rem;
    flex-wrap: nowrap;
    justify-content: center;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    list-style: none;
    padding: 0;
  }
{% endstyle %}

<div class="footer-custom color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="footer-custom__inner">
      <div class="footer-custom__main">
        <div class="footer-custom__col footer-custom__col--logo-block">
          <div class="footer-custom__col--logo">
            {% if section.settings.logo != blank %}
              <img
                src="{{ section.settings.logo | image_url: width: 330 }}"
                alt="{{ section.settings.brand_name | escape }}"
                class="footer-custom__logo-img"
                loading="lazy"
                width="330"
                height="{{ section.settings.logo.height | default: 90 }}"
              >
            {% else %}
              <div class="footer-custom__logo-text footer-custom__logo-text--main">WHOLE</div>
              <div class="footer-custom__logo-text footer-custom__logo-text--sub">FREQUENCY</div>
            {% endif %}
          </div>
          <div class="footer-custom__newsletter-wrapper">
            {%- form 'customer', id: 'ContactFooterCustom', class: 'footer-custom__newsletter newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="newsletter-form__field-wrapper" style="width:100%">
                <div class="field">
                  <input
                    id="NewsletterFormCustom--{{ section.id }}"
                    type="email"
                    name="contact[email]"
                    class="field__input"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                      autofocus aria-invalid="true" aria-describedby="ContactFooterCustom-error"
                    {% elsif form.posted_successfully? %}
                      aria-describedby="ContactFooterCustom-success"
                    {% endif %}
                    placeholder="{{ 'newsletter.label' | t }}"
                    required
                  >
                  <button
                    type="submit"
                    class="newsletter-form__button field__button"
                    name="commit"
                    id="SubscribeCustom"
                    aria-label="{{ 'newsletter.button_label' | t }}"
                  >
                    SUBSCRIBE
                  </button>
                </div>
                {%- if form.errors -%}
                  <small class="newsletter-form__message form__message" id="ContactFooterCustom-error">
                    <span class="svg-wrapper">
                      {{- 'icon-error.svg' | inline_asset_content -}}
                    </span>
                    {{- form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email -}}
                  </small>
                {%- endif -%}
              </div>
              {%- if form.posted_successfully? -%}
                <h3
                  class="newsletter-form__message newsletter-form__message--success form__message"
                  id="ContactFooterCustom-success"
                  tabindex="-1"
                  autofocus
                >
                  <span class="svg-wrapper">
                    {{- 'icon-success.svg' | inline_asset_content -}}
                  </span>
                  {{- 'newsletter.success' | t }}
                </h3>
              {%- endif -%}
            {%- endform -%}
          </div>
          <div class="footer-custom__socials-wrapper">
            {%- render 'social-icons', class: 'footer-custom__list-social' -%}
          </div>
        </div>
        <div class="footer-custom__mobile-cols">
          <div class="footer-custom__mobile-col">
            <div class="footer-custom__menu">
              <div class="footer-custom__menu-title">Quick Links</div>
              {% if section.settings.menu_about != blank %}
                <ul class="footer-custom__menu-list">
                  {% for link in linklists[section.settings.menu_about].links %}
                    <li class="footer-custom__menu-item">
                      <a href="{{ link.url }}" class="footer-custom__menu-link">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          </div>
          <div class="footer-custom__mobile-col">
            <div class="footer-custom__menu">
              <div class="footer-custom__menu-title">Brand Policies</div>
              {% if section.settings.menu_brand_policies != blank %}
                <ul class="footer-custom__menu-list">
                  {% for link in linklists[section.settings.menu_brand_policies].links %}
                    <li class="footer-custom__menu-item">
                      <a href="{{ link.url }}" class="footer-custom__menu-link">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="footer-custom__col footer-custom__col--about">
          <div class="footer-custom__menu">
            <div class="footer-custom__menu-title">Quick Links</div>
            {% if section.settings.menu_about != blank %}
              <ul class="footer-custom__menu-list">
                {% for link in linklists[section.settings.menu_about].links %}
                  <li class="footer-custom__menu-item">
                    <a href="{{ link.url }}" class="footer-custom__menu-link">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>
        <div class="footer-custom__col footer-custom__col--brand-policies">
          <div class="footer-custom__menu">
            <div class="footer-custom__menu-title">Brand Policies</div>
            {% if section.settings.menu_brand_policies != blank %}
              <ul class="footer-custom__menu-list">
                {% for link in linklists[section.settings.menu_brand_policies].links %}
                  <li class="footer-custom__menu-item">
                    <a href="{{ link.url }}" class="footer-custom__menu-link">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>
        <div class="footer-custom__col footer-custom__col--company">
          <div class="footer-custom__company-title">COMPANY INFORMATION</div>
          <div class="footer-custom__company">
            <span class="footer-custom__email-icon"><i class="fa-solid fa-envelope"></i></span>
            <span>{{ section.settings.support_email }}</span>
          </div>
        </div>
      </div>

      {%- comment -%} Payment methods centered below main section {%- endcomment -%}
      <div class="footer-custom__payments-wrapper">
        <div class="footer-custom__payment">
          <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
          <ul class="list list-payment" role="list">
            {%- for type in shop.enabled_payment_types -%}
              <li class="list-payment__item">
                {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <hr class="footer-custom__divider">
  <div class="page-width">
    <div class="footer-custom__copyright">&copy; 2025, {{ section.settings.brand_name }}. All rights reserved.</div>
  </div>
</div>

{% schema %}
{
  "name": "Footer Custom",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer logo"
    },
    {
      "type": "link_list",
      "id": "menu_about",
      "label": "Quick Links menu"
    },
    {
      "type": "link_list",
      "id": "menu_brand_policies",
      "label": "Brand Policies menu"
    },
    {
      "type": "text",
      "id": "support_email",
      "label": "Support email address",
      "default": "support@yourbrandname.com"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand name",
      "default": "Whole Frequency"
    },
    {
      "type": "header",
      "content": "Section Padding (Mobile)"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
