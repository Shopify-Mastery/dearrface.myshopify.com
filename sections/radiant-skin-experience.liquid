{% style %}
  .radiant-skin-experience-{{ section.id }} {
    position: relative;
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    padding-left: {{ section.settings.padding_left_mobile }}px;
    padding-right: {{ section.settings.padding_right_mobile }}px;
  }
  @media (min-width: 1024px) {
    .radiant-skin-experience-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      padding-left: {{ section.settings.padding_left_desktop }}px;
      padding-right: {{ section.settings.padding_right_desktop }}px;
    }
  }
  .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__container {
    width: 100%;
    height: 55rem;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    position: relative;
  }
  @media (min-width: 425px) {
    .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__container {
      height: 45rem;
    }
  }
  @media (min-width: 768px) {
    .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__container {
      height: auto;
    }
  }
  .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__image-wrapper {
    width: 100%;
    height: 20rem;
    position: relative;
    display: flex;
    justify-content: center;
  }
  .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__image {
    width: 100%;
    height: 100%;
    /* height: 30rem; */
    /* max-width: 100%; */
    border-radius: 0;
    object-fit: cover;
    display: block;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__card {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, 20%);
    width: 90%;
    background: {{ section.settings.card_bg_color }};
    border: 2px solid {{ section.settings.card_border_color }};
    color: {{ section.settings.card_content_color }};
    border-radius: 0.5rem;
    box-shadow: 0 4px 24px 0 rgba(0,0,0,0.08);
    padding: 2rem;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1.2rem;
    line-height: 1.2;
  }
  .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__desc {
    font-size: 1.2rem;
    line-height: 1.5;
  }
  .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__check {
    color: #e87fc1;
    font-size: 1.2rem;
    margin-top: 0.2rem;
  }
  @media (min-width: 768px) {
    .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__container {
      flex-flow: row nowrap;
      align-items: center;
      justify-content: flex-start;
    }
    .radiant-skin-experience-{{ section.id }}[data-flow="rtl"] .radiant-skin-experience__container {
      justify-content: flex-end;
    }
    .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__image-wrapper {
      width: 50%;
      height: 35rem;
    }
    .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__image {
      width: 100%;
      max-width: 100%;
    }
    .radiant-skin-experience-{{ section.id }}[data-flow="ltr"] .radiant-skin-experience__image-wrapper {
      order: 1;
    }
    .radiant-skin-experience-{{ section.id }}[data-flow="rtl"] .radiant-skin-experience__image-wrapper {
      order: 2;
    }
    .radiant-skin-experience-{{ section.id }}[data-flow="ltr"] .radiant-skin-experience__card {
      left: 40%;
      top: 50%;
      right: auto;
      bottom: auto;
      transform: translate(20%, -50%);
    }
    .radiant-skin-experience-{{ section.id }}[data-flow="rtl"] .radiant-skin-experience__card {
      left: auto;
      right: 40%;
      top: 50%;
      bottom: auto;
      transform: translate(-20%, -50%);
    }
    .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__card {
      width: 480px;
      min-width: 340px;
      max-width: 520px;
      padding: 2.5rem;
    }
  }
  @media (min-width: 1024px) {
    .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__image-wrapper {
      width: 60%;
    }
    .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__card {
      padding: 3.5rem;
    }
    .radiant-skin-experience-{{ section.id }}[data-flow="ltr"] .radiant-skin-experience__card {
      left: 65%;
    }
    .radiant-skin-experience-{{ section.id }}[data-flow="rtl"] .radiant-skin-experience__card {
      right: 65%;
    }
  }
  @media (min-width: 1440px) {
    .radiant-skin-experience-{{ section.id }} .radiant-skin-experience__image-wrapper {
      width: 60%;
    }
    .radiant-skin-experience-{{ section.id }}[data-flow="ltr"] .radiant-skin-experience__card {
      left: 70%;
    }
    .radiant-skin-experience-{{ section.id }}[data-flow="rtl"] .radiant-skin-experience__card {
      right: 70%;
    }
  }
{% endstyle %}
<div
  class="radiant-skin-experience-{{ section.id }} color-{{ section.settings.color_scheme }}"
  data-flow="{{ section.settings.content_flow }}"
>
  <div class="page-width">
    <div class="radiant-skin-experience__container">
      <div class="radiant-skin-experience__image-wrapper">
        <div
          class="radiant-skin-experience__image"
          style="{% if section.settings.image != blank %}background-image:url('{{ section.settings.image | image_url: width: 1200 }}');{% else %}background: var(--color-background);display:flex;align-items:center;justify-content:center;{% endif %}"
        >
          {% unless section.settings.image != blank %}Upload an image{% endunless %}
        </div>
        <div class="radiant-skin-experience__card">
          <div class="radiant-skin-experience__title">{{ section.settings.title }}</div>
          <div class="radiant-skin-experience__desc">{{ section.settings.description }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Radiant Skin Experience",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Section color scheme",
      "default": "background-1"
    },
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card background color",
      "default": "#f8d8f6"
    },
    {
      "type": "color",
      "id": "card_border_color",
      "label": "Card border color",
      "default": "#e87fc1"
    },
    {
      "type": "color",
      "id": "card_content_color",
      "label": "Card content color",
      "default": "#1a1a1a"
    },
    {
      "type": "select",
      "id": "content_flow",
      "label": "Content flow",
      "options": [
        { "value": "ltr", "label": "Left to Right (LTR)" },
        { "value": "rtl", "label": "Right to Left (RTL)" }
      ],
      "default": "ltr"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "<strong>Experience Radiant Skin With Every Use</strong>"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Our Radiant Skin Experience is a luxurious skincare routine designed to rejuvenate and revitalize your skin, leaving you with a radiant, youthful glow.</p>"
    },
    {
      "type": "header",
      "content": "Section Padding (Mobile)"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Top padding (mobile)",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Bottom padding (mobile)",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_left_mobile",
      "label": "Left padding (mobile)",
      "min": 0,
      "max": 48,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right_mobile",
      "label": "Right padding (mobile)",
      "min": 0,
      "max": 48,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Section Padding (Desktop)"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Top padding (desktop)",
      "min": 0,
      "max": 160,
      "step": 8,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Bottom padding (desktop)",
      "min": 0,
      "max": 160,
      "step": 8,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_left_desktop",
      "label": "Left padding (desktop)",
      "min": 0,
      "max": 96,
      "step": 8,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right_desktop",
      "label": "Right padding (desktop)",
      "min": 0,
      "max": 96,
      "step": 8,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Radiant Skin Experience"
    }
  ]
}
{% endschema %}
